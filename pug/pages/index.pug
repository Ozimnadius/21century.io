extends ../main

block variables
    - var title = 'Главная'
    - var headerDopClass = ''

block content
    main.main
        // -slider
        section.main__slider
            .slider
                .swiper-container.slider__container
                    .swiper-wrapper.slider__wrapper
                        each i in [1,2,3,4]
                            .swiper-slide.slider__slide
                                div(style='background-image:url(images/content/main/slider/img.jpg)').slide
                                    .container.slide__container
                                        .slide__title
                                            |наружная реклама
                                            br
                                            |на вашей улице
                                        a(href='/').slide__link.button
                                            .button__title Типы конструкций
                    // -pagination
                    .slider__pag
                        .container.slider__pag-container
                            .swiper-pagination.slider__pag-pag

        //- types
        section.main__types
            .types
                .container
                    //- top
                    .types__top
                        .types__title.title Типы конструкций
                        a(href='/').types__link Все конструкции

                    //- slider
                    .types__slider
                        .swiper-container.types__container
                            .swiper-wrapper.types__wrapper
                                each i,x in types
                                    .swiper-slide
                                        a(href='/').types__slide
                                            .types__slide-img
                                                img(src='images/content/main/types/'+(x+1)+'.png').types__slide-pic
                                            .types__slide-desc
                                                .types__slide-title= i.title
                                                .types__slide-size
                                                    +icon('ruler', 'types__slide-svg')
                                                    .types__slide-char= i.size



                            //- nav
                            button(type=button).types__prev.types__button
                                +icon('left', 'types__button-svg')
                            button(type=button).types__next.types__button
                                +icon('right', 'types__button-svg')
        //- popular
        section.main__popular
            .container
                .main-pop
                    .main-pop__title Популярные рекламные конструкции

                    .main-pop__table
                        table.table
                            thead
                                tr
                                    th.table__w1
                                    th.table__w2 Фото
                                    th.table__w3 Адрес расположения
                                    th.table__w4 Формат
                                    th.table__w5 Сторона
                                    th.table__w6 Статус
                                    th.table__w7 Стоимость, мес
                                    th.table__w8
                            tbody
                                each i in [1,2,3,4,5]
                                    tr.table__item
                                        td.table__w1.table__item-num= i
                                        td.table__w2
                                            .table__item-img
                                                img(src='images/content/main/popular/img.jpg').table__item-pic
                                        td.table__w3.table__item-addr г. Балашиха, проспект Ленина, напротив д. 53 (Справа)
                                        td.table__w4.table__item-size 3.0 х 6.0 м.
                                        td.table__w5.table__item-side А
                                        td.table__w6.table__item-months
                                            .table__item-month
                                                |Май:&nbsp;
                                                span.table__item-month_false Занято
                                            .table__item-month
                                                |Июнь:&nbsp;
                                                span.table__item-month_true Свободно
                                        td.table__w7.table__item-price 15 000 руб./ мес.
                                        td.table__w8.table__item-order Заказать
                                tr
                                    td(colspan=8)

                    .main-pop__more
                        a(href='/').button.main-pop__link
                            .button__title Больше билбордов
        //- bilboards
        section.main__boards
            .main-boards
                .container
                    .main-boards__title.title Поиск Билбордов
                    .main-boards__map
                        img(src='images/content/main/bilboards.png')
        //- news
        section.main__news
            .mnews
                .container
                    .mnews__container
                        //- switches
                        .mnews__switches
                            .mnews__switch.active Новости компании
                            .mnews__switch Новости рынка
                        //- tabs



