    body
        .wrapper
            //- heeader
            header(class=headerDopClass).header
                // -top
                .header__top
                    .container
                        .header__top-row
                            //- socials
                            .header__socials
                                include common/socials

                            //- contacts
                            .header__contacts
                                each i in headerContacts
                                    .header__contact
                                        a(href=i.href).contact
                                            +icon(i.svg, 'contact__svg')
                                            .contact__title= i.title

                //- bottom
                .header__bottom
                    .container
                        .row.header__bottom-row
                            //- logo
                            .header__logo
                                include common/logo

                            //- nav
                            .header__nav
                                include common/nav
            //- pages
            .page
                block content

            //- footer
            footer.footer
                .footer__top
                    .container
                        .row.footer__top-row
                            .footer__logo
                                include common/logo
                            .footer__nav
                                include common/nav


                .footer__middle
                    .container
                        .row
                            .footer__left
                                .footer__contacts
                                    each i in headerContacts
                                        .footer__contact
                                            a(href=i.href).contact.contact_footer
                                                +icon(i.svg, 'contact__svg')
                                                .contact__title= i.title
                                .footer__contacts
                                    .footer__contact
                                        a(href='/').contact.contact_footer
                                            +icon('pin', 'contact__svg')
                                            .contact__title г. Москва, ул. Пятницкая, д. 25, стр. 1

                                .footer__socials
                                    include common/socials

                            .footer__right
