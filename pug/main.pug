include common/_mixins
include common/_settings
block variables

doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(content="ie=edge" http-equiv="x-ua-compatible")
        meta(content="width=device-width, initial-scale=1" name="viewport")

        title 21 Век | #{title}
        link(rel='stylesheet' href='css/vendor.min.css')
        link(rel='stylesheet' href='css/main.css')

        link(rel="apple-touch-icon" sizes="180x180" href="images/favicon/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="images/favicon/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="images/favicon/favicon-16x16.png")
        link(rel="manifest" href="images/favicon/site.webmanifest")
        meta(name="msapplication-TileColor" content="#da532c")
        meta(name="theme-color" content="#ffffff")
    body
        .wrapper
            //- heeader
            header(class=headerDopClass).header
                // -top
                .header__top
                    .container
                        .header__top-row
                            //- socials
                            .header__socials
                                include common/socials

                            //- contacts
                            .header__contacts
                                each i in headerContacts
                                    .header__contact
                                        a(href=i.href).contact
                                            +icon(i.svg, 'contact__svg')
                                            .contact__title= i.title

                //- bottom
                .header__bottom
                    .container
                        .row.header__bottom-row
                            //- logo
                            .header__logo
                                include common/logo

                            //- nav
                            .header__nav
                                include common/nav
            //- pages
            .page
                block content

            //- footer
            footer.footer
                .footer__top
                    .container
                        .row.footer__top-row
                            .footer__logo
                                include common/logo
                            .footer__nav
                                include common/nav


                .footer__middle
                    .container
                        .row
                            .footer__left
                                .footer__contacts
                                    each i in headerContacts
                                        .footer__contact
                                            a(href=i.href).contact.contact_footer
                                                +icon(i.svg, 'contact__svg')
                                                .contact__title= i.title
                                .footer__contacts
                                    .footer__contact
                                        a(href='/').contact.contact_footer
                                            +icon('pin', 'contact__svg')
                                            .contact__title г. Москва, ул. Пятницкая, д. 25, стр. 1

                                .footer__socials
                                    include common/socials

                            .footer__right
                                .footer__menu
                                    a(href='/').footer__item
                                        +icon('hexagon', 'footer__item-svg')
                                        .footer__item-title Цифровой суперсайт
                                    a(href='/').footer__item
