include common/_mixins
include common/_settings
block variables

doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(content="ie=edge" http-equiv="x-ua-compatible")
        meta(content="width=device-width, initial-scale=1" name="viewport")

        title 21 Век | #{title}
        link(rel='stylesheet' href='css/vendor.min.css')
        link(rel='stylesheet' href='css/main.css')

        link(rel="apple-touch-icon" sizes="180x180" href="images/favicon/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="images/favicon/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="images/favicon/favicon-16x16.png")
        link(rel="manifest" href="images/favicon/site.webmanifest")
        meta(name="msapplication-TileColor" content="#da532c")
        meta(name="theme-color" content="#ffffff")
    body
        .wrapper
            //- heeader
            header(class=headerDopClass).header
                // -top
                .header__top
                    .container
                        .header__top-row
                            //- socials
                            .header__socials
                                include common/socials

                            //- contacts
                            .header__contacts
                                each i in headerContacts
                                    .header__contact
                                        a(href=i.href).contact
                                            +icon(i.svg, 'contact__svg')
                                            .contact__title= i.title

                //- bottom
                .header__bottom
                    .container
                        .row.header__bottom-row
                            //- logo
                            .header__logo
                                a(href='/').logo
                                    img(src='images/content/logo.svg').logo__img

                            //- nav
                            .header__nav
                                .nav
                                    each i in nav
                                        a(href=i.link class=i.dopClass).nav__item= i.title
            //- pages
            .page
                block content

            //- footer
            footer.footer

